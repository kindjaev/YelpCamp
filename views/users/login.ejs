<% layout("layouts/boilerplate.ejs") %> 

<form action="/login" method="POST" class="validated-form d-flex align-items-center mt-5" novalidate> 
  <div class="col col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="mb-3 mt-4">
      <label for="username" class="form-label">Username</label>
      <input type="string" class="form-control" id="username" name="username" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>

    <button type="submit" class="btn btn-primary px-3">Login</button>
  </div>
</form>